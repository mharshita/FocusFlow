{
    "manifest_version": 3,
    "name": "Focus Flow",
    "description": "This chrome extension helps you to detox from social media by redirecting to another page whenever you open instagram/twitter. In future it's gonna have a lot of features.",
    "version": "1.0",
    "author": "Harshita Mangla",
    "icons": {
        "16": "icons/focus16.png",
        "32": "icons/focus32.png",
        "48": "icons/focus48.png",
        "128": "icons/focus128.png"
    },
    "permissions": [
        "tabs",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "option.js"
            ]
        }
    ],
    "background": {
        "service_worker": "script.js"
    },
    "action": {
        "default_title": "Focus Flow"
    }
}